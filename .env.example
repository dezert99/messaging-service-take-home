# Database
DATABASE_URL="postgresql://messaging_user:messaging_password@localhost:5432/messaging_service"

# Server
PORT=8080
NODE_ENV=development

# Rate Limiting
SMS_RATE_LIMIT=100
EMAIL_RATE_LIMIT=500

# Logging
LOG_LEVEL=info

# Request Limits
MAX_PAYLOAD_SIZE=50mb

# Webhook Security (optional - set to skip verification in development)
SKIP_WEBHOOK_AUTH=true
# TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
# SENDGRID_WEBHOOK_VERIFICATION_KEY=your_sendgrid_verification_key_here