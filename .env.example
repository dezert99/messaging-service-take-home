# Database
DATABASE_URL="postgresql://messaging_user:messaging_password@localhost:5432/messaging_service"

# Server
PORT=8080
NODE_ENV=development

# Rate Limiting
SMS_RATE_LIMIT=100
EMAIL_RATE_LIMIT=500

# Logging
LOG_LEVEL=info

# Request Limits
MAX_PAYLOAD_SIZE=50mb

# Webhook Security (optional - set to skip verification in development)
SKIP_WEBHOOK_AUTH=true
# TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
# SENDGRID_WEBHOOK_PUBLIC_KEY=your_sendgrid_ecdsa_public_key_here

# Example webhook secrets for testing (use real secrets in production)
# TWILIO_AUTH_TOKEN=test_auth_token_123456789abcdef
# SENDGRID_WEBHOOK_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----\nMFkwEwYHKoZIzj0CAQYIKoZIzj0DAQcDQgAE...\n-----END PUBLIC KEY-----